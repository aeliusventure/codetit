	right: 10,
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE
},
".itemTitle": {
	left: 0,
	width: '38.5%',
	height: Ti.UI.SIZE,
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontSize: 14,
		fontWeight: 'bold'
	},
	color: '#333',
},
".itemValue": {
	left: '40%',
	right: 0,
	height: Ti.UI.SIZE,
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontSize: 14
	},
	color: '#333'
},
".itemSeparator": {
	left: 10,
