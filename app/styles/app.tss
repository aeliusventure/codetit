"TabGroup[platform=ios]": {
	tabsBackgroundColor: '#1fb7d7',
	activeTabIconTint: '#fff'
},
"TabGroup[platform=android]": {
	tabsBackgroundColor: '#f00'
},
"Window[platform=ios]": {
	backgroundColor: '#fff',
	barColor: '#1fb7d7',
	navTintColor: '#fff',
	statusBarStyle: Titanium.UI.iOS.StatusBar.LIGHT_CONTENT,
	translucent: false
},
"Window[platform=android]": {
	backgroundColor: '#f8f8f8'
},
"ScrollView": {
	contentHeight: 'auto',
	showVerticalScrollIndicator: true
},
"Label[platform=ios]": {
	font: {
		fontSize: 14
	},
	color: '#000'
},
"Label[platform=android]": {
	font: {
		fontSize: 14
	},
	color: '#000'
},
"TextField[platform=ios]": {
	color: '#111',
	font: {
		fontSize: 14
	},
