<Alloy>
	<Window id="window">
		<LeftNavButton platform="ios">
			<Button id="navCancelButton" title="キャンセル" />
		</LeftNavButton>

		<ScrollView id="scrollView">
			<View id="wrapper">
				<Label class="itemLabel" text="IDまたはメールアドレス" />
				<TextField id="email" class="itemValue" hintText="IDまたはメールアドレスを入力してください" />

				<Label class="itemLabel" text="パスワード" />
				<Label id="passwordWarnLabel1" class="passwordWarnLabel" text="※パスワードを変更しない場合は空白にしてください" />
				<TextField id="password" class="itemValue" hintText="" />

				<Label class="itemLabel" text="パスワード(確認)" />
				<Label id="passwordWarnLabel2" class="passwordWarnLabel" text="※パスワードを変更しない場合は空白にしてください" />
				<TextField id="password_confirmation" class="itemValue" hintText="" />

				<Label class="itemLabel" text="ニックネーム(表示名)" />
				<TextField id="nick_name" class="itemValue" hintText="ニックネーム(表示名)を入力してください" />

				<Button class="btnActionLarge" id="registerButton" title="(登録)" />
			</View>
		</ScrollView>
	</Window>
</Alloy>
