	color: '#111',
	font: {
		fontSize: 14
	},
	autocapitalization: Ti.UI.TEXT_AUTOCAPITALIZATION_NONE,
	borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED
},
"TextArea[platform=ios]": {
	color: '#111',
	font: {
		fontSize: 14
	},
	borderColor: "#ddd",
	borderWidth: 1,
	borderRadius: 4
},
